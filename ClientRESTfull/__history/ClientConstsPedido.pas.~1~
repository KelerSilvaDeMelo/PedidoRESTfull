unit ClientConstsPedido;

interface

const
  // URL do servidor e suas rotas
  SERVER_API_URL = 'http://localhost:8080';

  // As rotas diretamente mapeadas para as ações do WebModule no servidor
  ENDPOINT_LISTAR_PEDIDOS = SERVER_API_URL + '/listarPedidos';
  ENDPOINT_INCLUIR_PEDIDO = SERVER_API_URL + '/incluirPedido';
  ENDPOINT_ADICIONAR_ITEM_PEDIDO = SERVER_API_URL + '/adicionarItemPedido';

  // Mensagens de erro
  MSG_ERRO_SERVIDOR_INDISPONIVEL = 'Não foi possível se conectar ao servidor. Verifique sua conexão.';
  MSG_ERRO_ENVIO_DADOS = 'Erro ao enviar dados ao servidor.';

  // Timeout padrão
  HTTP_TIMEOUT = 5000; // 5 segundos

implementation

end.

