implementation

{$R *.dfm}

procedure TFormPedidosClient.ActionIncluirPedidoExecute(Sender: TObject);
begin
  ShowMessage('Incluir pedido.');
end;

procedure TFormPedidosClient.ActionListarPedidosExecute(Sender: TObject);
